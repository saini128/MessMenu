<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widgetRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/widget_bg"
    android:orientation="vertical"
    android:padding="18dp">

    <!-- Day + Hostel Name Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/widgetDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Monday"
            android:textSize="16sp"
            android:textColor="@color/widget_text"
	    android:textStyle="bold" />

        <TextView
            android:id="@+id/widgetHostel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Hostel A"
            android:textAlignment="textEnd"
            android:textSize="16sp"
            android:textColor="@color/widget_text"
            android:textStyle="italic" />
    </LinearLayout>

    <!-- Breakfast -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="6dp"
        android:text="Breakfast"
        android:textColor="@color/widget_text"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/widgetBreakfast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Poha, Tea"
        android:textColor="@color/widget_text"
        android:textSize="13sp" />

    <!-- Lunch -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="6dp"
        android:text="Lunch"
        android:textColor="@color/widget_text"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/widgetLunch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dal, Rice, Roti"
        android:textColor="@color/widget_text"
        android:textSize="13sp" />

    <!-- Dinner -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="6dp"
        android:text="Dinner"
        android:textColor="@color/widget_text"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/widgetDinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Paneer, Naan"
        android:textColor="@color/widget_text"
        android:textSize="13sp" />
</LinearLayout>
